{% embed 'partials/base.html.twig' %}

  {% block content %}
    {% if config.plugins.breadcrumbs.enabled %}
      {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <div class="character">
      <h1>{{ page.title }}</h1>
      <div class="wrapper grid pure-g">
        <div class="pure-u-1-4" style="text-align: center">{{ page.media[page.header.image.detail].html() }}</div>
        <div class="size-3-4 pure-u-2-3">{{ page.content }}</div>
      </div>
    </div>
  {% endblock %}

{% endembed %}
